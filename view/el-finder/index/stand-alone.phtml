<?php

/** @var $elfinder \ElFinder\View\Helper\ElFinder */
$type              = $this->type;
$elfinder          = $this->plugin('elfinder');
$connectorUrl      = $elfinder->getConnectorURL();
$typedConnectorUrl = join('/', array($connectorUrl, $type));

echo $elfinder
    ->setConnectorURL($typedConnectorUrl)
    ->renderStandAloneScript('elfinder')
    ->renderContainer('elfinder');